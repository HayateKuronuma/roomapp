<header>
  <div class="header-container">
    <div class="header-left-nav">
      <a href="/">
        <img src="/logo.png">
      </a>
      <%= search_form_for @q, url: search_rooms_path do |f| %>
        <div class="header-serch">
          <%= f.text_field :adress_cont, placeholder: "エリア", class: "header-form" %>
          <i class="fas fa-map-marker-alt"></i>
        </div>
        <div class="header-serch">
          <%= f.text_field :room_name_or_room_introduction_or_price_or_adress_cont, placeholder: "キーワード", class: "header-form" %>
          <i class="fas fa-search"></i>
        </div>
        <%= f.submit "", class: "serch-btn-hidden" %>
      <% end %>
    </div>
    
    <% if session[:user_id] %>
      <div class="header-right-nav">
        <p class="current-user-name"><%= @current_user.name %></p>
        <div class="current-user-img">
          <% if @current_user.image_name.attached? %>
            <%= image_tag @current_user.image_name.variant(gravity: :center, resize:"300x300^", crop:"300x300+0+0"), id: "current-user-img" %>
          <% else %>
            <%= image_tag "/default_icon.jpg", id: "current-user-img" %>
          <% end %>
          <ul class="header-nav-menu" id="nav-menu">
            <li>
              <%= link_to("ルーム登録", :new_room) %>
            </li>
            <li>
              <%= link_to("予約済みルーム一覧", :reservations) %>
            </li>
            <li>
              <%= link_to("登録済みルーム一覧", :rooms_posts) %>
            </li>
            <li>
              <%= link_to("設定", :users_account) %>
            </li>
            <li>
              <%= link_to("ログアウト", :logout, {method: :post}) %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <div class="header-right-nav">
        <div class="btn-wrapper">
          <%= link_to("ログイン", :users_signin, class: "btn signin-btn") %>
          <%= link_to("登録する", :users_signup, class: "btn to-signup-btn") %>
        </div>
      </div>
    <% end %>
  </div>
</header>
    
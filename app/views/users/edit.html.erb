<%= render "shared/error", obj:@user %>
<% if @error_message %>
  <div class="form-error">
    <%= @error_message %>
  </div>
<% end %>
<div class="container">
  <div class="form-wrapper">
    <h2 class="account-edit-title">アカウント編集</h2>
    
    <div class="form-content">
      <%= form_tag('/users/edit', method: :patch) do |f| %>
        <div class="form-group">
          <%= label_tag :メールアドレス %>
          <%= text_field_tag :email, "#{@current_user.email}"  %>
        </div>
        
        <div class="form-group">
          <%= label_tag :変更後パスワード（変更する場合のみ入力） %>
          <%= password_field_tag :password %>
        </div>
        
        <div class="form-group">
          <%= label_tag :パスワード確認用（変更する場合のみ入力） %>
          <%= password_field_tag :password_confirmation %>
        </div>
        
        <div class="form-group">
          <%= label_tag :現在のパスワード %>
          <%= password_field_tag :current_password, "", placeholder: "現在のパスワードを入力" %>
        </div>
        
        <div class="form-btn">
          <%= submit_tag "更新", class: "btn blue-btn" %>
        </div>
        
        <div class="form-btn">
          <%= link_to "戻る", :users_account, class: "btn back-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
